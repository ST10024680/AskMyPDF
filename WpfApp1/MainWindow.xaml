<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800"
        Background="#F5F5F7" 
        FontFamily="Segoe UI" 
        FontSize="14">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Upload PDF Button -->
        <Button Content="Upload PDF"
                Click="UploadPdf_Click"
                Width="120" Height="36"
                Background="White" 
                Foreground="#007AFF" 
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                FontWeight="SemiBold"
                HorizontalAlignment="Left"
                Padding="10,0"
                Margin="0,0,0,10"
                Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="5"/>
            </Button.Effect>
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Messages List -->
        <ListBox Grid.Row="1" ItemsSource="{Binding Messages}" 
                 Background="White" 
                 BorderThickness="0" 
                 Padding="10" 
                 Margin="0,0,0,10"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#F0F0F5" CornerRadius="8" Padding="8" Margin="0,5">
                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- User Input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <TextBox x:Name="UserInput"
                     Width="Auto"
                     MinWidth="500"
                     Height="36"
                     Background="White"
                     BorderBrush="#E0E0E0"
                     BorderThickness="1"
                     Padding="10,0"
                     Margin="0,0,10,0"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     />
            <Button Content="Send"
                    Click="Send_Click"
                    Width="80" Height="36"
                    Background="#007AFF"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    />
        </StackPanel>
    </Grid>
</Window>
